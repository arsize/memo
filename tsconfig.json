{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "src",
    "noImplicitAny": true,
    "typeRoots": [
      "./node_modules/@types",
      "./typings"
    ],
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "*/**/*.d.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}